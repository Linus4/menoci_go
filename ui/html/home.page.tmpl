{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "main"}}
<h2>Latest Publications</h2>
{{if .Publications}}
<table>
    <tr>
        <th>Title</th>
        <th>Created</th>
        <th>ID</th>
    </tr>
    {{range .Publications}}
    <tr>
        <td><a href="/publication?id={{.ID}}">{{.Title}}</a></td>
        <td>{{humanDate .Created}}</td>
        <td>#{{.ID}}</td>
    </tr>
    {{end}}
</table>
{{else}}   
    <p>There's nothing to see here yet!</p>
{{end}}
{{end}}